
<h2>Recently updated posts</h2>

<table>
  <thead>
    <tr>
      <th>Title</th>
      <th>Body</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @posts.each do |post| %>
      <tr>
        <td><%= post[:title] %></td>
        <td><%= post[:body] %></td>
      </tr>
    <% end %>
  </tbody>
</table>
